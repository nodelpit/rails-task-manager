<h2 class="text-center mt-5">Update this task</h2>

  <div class="row justify-content-center">
    <div class="col-md-5">
      <%= form_with(model: @task, method: :patch) do |form| %>
        <div class="form-group mb-3">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :details %>
          <%= form.text_area :details, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :completed %>
          <%= form.check_box :completed, class: "ms-2" %>
        </div>

        <div class="d-flex justify-content-between align-items-center">
          <%= form.submit "Update Task", class: "btn btn-primary" %>
          <%= link_to "Back to list", tasks_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
