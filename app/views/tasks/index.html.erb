<div class="px-5">
  <%= link_to new_task_path, class: "text-decoration-none fs-5" do %>
  <i class="fa-solid fa-plus"></i>
    Add a new task
  <% end %>
</div>

<h2 class="d-flex justify-content-center mt-5">My tasks</h2>

<div class="d-flex justify-content-center mt-5">
 <div class="border px-5 p-3 rounded shadow">
   <ul>
  <% @tasks.each do |task| %>
    <li class="mt-3">
      <div>
        <input type="checkbox" <%= task.completed ? 'checked' : '' %>>
        <%= link_to task.title, task_path(task), class: "text-decoration-none" %> -
        <%= link_to '<i class="fa-solid fa-trash" style="color: #FF0000;"></i>'.html_safe, task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title} ?" } %>
      </div>
    </li>
  <% end %>
  </ul>
 </div>
</div>

