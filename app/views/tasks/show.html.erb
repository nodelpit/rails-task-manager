<div class="px-5 text-primary">
  <%= link_to tasks_path, class: "text-decoration-none" do %>
    <i class="fa-solid fa-arrow-right fa-rotate-180"></i>
    Back to list
  <% end %>
</div>
<h2 class="d-flex justify-content-center mt-5"><%= @task.title %></h2>
<div>
  <div class="d-flex justify-content-center mt-5">
    <div class="border p-5 shadow rounded">
      <p><%= @task.details %></p>
      <div class="text-start mt-4">
        <%= link_to "Edit this task", edit_task_path(@task) %>
      </div>
    </div>
  </div>
</div>
